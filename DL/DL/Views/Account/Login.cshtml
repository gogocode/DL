@using DL.Web.ViewModels.Account
@model LoginVM
@{
    ViewBag.Title = "登入帳號";
}
<br />

<script>
    $(function () {
        $("#AccountId").val('1698');
        $("#Password").val('1234');
    });

    $(function () {
        $("form").makeValidationInline();
    });
</script>

<br />
<label class="title">@ViewBag.Title</label>
<hr />

<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new {@id="form", @class = "form-horizontal", role = "form" }))
            {
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.AccountId, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.AccountId, new {@placeholder="必填欄位", @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.AccountId, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new {  @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.Password, new {@placeholder = "必填欄位", @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="登入" class="btn btn-default" />
                        @Html.ActionLink("註冊", "Register", null, new { @class = "btn btn-default" })
                    </div>
                </div>
            }
        </section>
    </div>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
